<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="ToolbarSubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
